<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/gradient_press_from"
                android:endColor="@color/gradient_press_to"
                android:angle="270" />
        </shape>
    </item>

    <item android:state_enabled="true">        
        <shape>
            <gradient
                android:startColor="@color/gradient_from"
                android:endColor="@color/gradient_to"
                android:angle="270" />
        </shape>
    </item>
    
     <item android:state_enabled="false">        
        <shape>
            <gradient
                android:startColor="@color/gradient_inactive_from"
                android:endColor="@color/gradient_inactive_to"
                android:angle="270" />
        </shape>
    </item>
</selector>